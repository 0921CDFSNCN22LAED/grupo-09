<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head.ejs', {title: "Creando consola" }) %>
</head>

<body>
  <%- include("../partials/header.ejs") %>

    <section class="centrar">
      <h2 class="headlines">Creando nueva consola</h2>
      <p style="margin-bottom: 20px">(consola software)</p>

      <form action="/consols" method="POST">
        <div class="margin-bottom-15">
          <label for="name">Nombre de la consola</label>
          <input class="box" type="text" name="name" id="name" required />
        </div>

        <div class="margin-bottom-15">
          <label for="image">Cargar imagen</label>
          <div>
            <input class="margin-bottom-20" type="file" name="image" accept=".jpg" />
          </div>
        </div>

        <div class="margin-bottom-15">
          <label for="logo">Cargar logo</label>
          <div>
            <input class="margin-bottom-20" type="file" name="logo" accept=".jpg" />
          </div>
        </div>

        <div class="buttons-send-erase">
          <button class="buttons" type="submit">Confirmar</button>
          <button class="buttons" type="reset">Borrar informacion</button>
        </div>
      </form>
    </section>

    <%- include("../partials/footer.ejs") %>
</body>

</html>