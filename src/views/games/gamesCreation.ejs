<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head.ejs', {title : "Creando nuevo juego" }) %>
</head>

<body>
  <%- include("../partials/header.ejs") %>
    <main>
      <section class="centrar">

        <h2 class="headlines margin-bottom-20">Crear juego</h2>
        <form action="/" method="POST">
          <div class="margin-bottom-15">
            <label for="name">Nombre del juego</label>
            <input class="box" type="text" name="name" id="name" />
          </div>

          <div class="margin-bottom-15">
            <label for="description">Descripci√≥n del juego</label>
            <textarea class="box-textarea" type="text" name="description" id="description" required></textarea>
          </div>

          <div class="margin-bottom-15">
            <label for="image">Cargar imagen</label>
            <div>
              <input class="margin-bottom-20" type="file" name="image" accept=".jpg .png .jpeg" />
            </div>
          </div>

          <div class="margin-bottom-15">
            <label for="gender" class="margin-bottom-20" required>Genero</label>
            <div class="margin-bottom-20">
              <% for(gender of genders) { %>
                <div>
                  <input class="radio-check-space" type="radio" name="gender" value="individual" />
                  <%= gender %>
                </div>
                <% } %>
            </div>
          </div>


          <div class="buttons-send-erase">
            <button class="buttons" type="submit">Confirmar</button>
            <button class="buttons">Cancelar</button>
          </div>
        </form>
      </section>
    </main>


    <%- include("../partials/footer.ejs") %>
</body>


</html>