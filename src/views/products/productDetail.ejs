          <div class="circulo4" ></div>
        </div>
      <div class="memoria" style="width: 100%"> 
        <p class="diseño2">Memoria</p>
        <div class="memoria2">
          <button class="memoriaa" style="width:100%">256GB</button>
        </div>
        <div class="memoria3">
          <button class="memoriaa" style="width:100%">512GB</button>
        </div>
      <div class="memoria4">
        <button class="memoriaa" style="width:100%">1TB</button>
      </div>
      <div class="todos" style="width: 100%">
        <p class="diseño">Color JoyStick</p>
        <div class="circulo4"></div>
        <div class="circulo5"></div>
        <div class="circulo"></div>
        <div class="circulo7"></div>
        </div>
      

    
      </div>

          <div class="boton1">
            <button class="boton" style="width: 100%"> Ver Catalogo de Juegos</button>
          </div>
          <div class="boton2">
            <button class="boton" style="width: 100%"> Agregar al Carrito</button>
          </div>
        </div>
      </section>
    </main>
